{
  "name": "legends-of-the-arena",
  "version": "5.0.0",
  "description": "An epic browser-based RPG fighting game with story mode, turn-based tactical combat, character progression, talent trees, equipment systems, and marketplace economy",
  "type": "module",
  "main": "src/main-new.js",
  "keywords": [
    "game",
    "rpg",
    "fighting",
    "turn-based",
    "combat",
    "browser-game",
    "javascript",
    "web-components",
    "story-mode",
    "equipment-system",
    "character-progression",
    "achievements",
    "marketplace",
    "tournament",
    "vanilla-js"
  ],
  "homepage": "https://github.com/todorivanov/legends-of-the-rena#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/todorivanov/legends-of-the-rena.git"
  },
  "bugs": {
    "url": "https://github.com/todorivanov/legends-of-the-rena/issues"
  },
  "author": {
    "name": "Todor Ivanov",
    "url": "https://github.com/todorivanov"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js --report-unused-disable-directives",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "clean": "rm -rf dist node_modules",
    "clean:dist": "rm -rf dist",
    "prebuild": "npm run clean:dist",
    "predeploy": "npm run test:unit",
    "check": "npm run lint && npm run format:check",
    "prepare": "npm run check",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "bootstrap": "5.3.8",
    "lz-string": "1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.48.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "happy-dom": "^15.7.4",
    "prettier": "^3.3.3",
    "sass": "1.97.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.0"
  },
  "browserslist": [
    ">0.5%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
